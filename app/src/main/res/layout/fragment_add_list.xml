<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/list_name_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="30dip">


        <EditText
            android:id="@+id/list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/forme_arrondie_bleue"
            android:fontFamily="MV Boli"
            android:gravity="center_horizontal"
            android:hint="Name of the list"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:gravity="center_horizontal"
        android:text="What you need : "
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview_add_listitems"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:divider="#F2F2F2"
            android:dividerHeight="10dp"
            android:layout_weight="90"
            />

        <Button
            android:id="@+id/create_list_button"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Create"
            android:background="@drawable/forme_arrondie_bleue"
            android:layout_weight="10"
            android:layout_marginBottom="20dip"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_list_message"
        android:layout_margin="20dip"
        android:visibility="invisible"
        />
</LinearLayout>