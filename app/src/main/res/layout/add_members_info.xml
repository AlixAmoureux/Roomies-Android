<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forme_rectangulaire_bleue"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/unknown_user"
        android:id="@+id/photo_membre"
        android:layout_weight="30"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/nom_membre"
            android:textStyle="bold|italic"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/prenom_membre"
            android:textStyle="bold|italic"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/ville_membre"
            android:textStyle="bold|italic"
            />

    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:id="@+id/add_members_button"
        android:text="Invite"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/forme_arrondie_bleue"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        />
</LinearLayout>